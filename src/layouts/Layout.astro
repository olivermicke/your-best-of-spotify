---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <script>
      import './wired-elements.js';
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }

  body {
    margin: 8px auto 64px;
    background: #fafafa;
    max-width: 1200px;
    color: #1a1a1a;
    font-family: 'Gloria Hallelujah', sans-serif;
  }

  h1 {
    font-size: 30px;
  }

  p {
    font-size: 22px;
  }

  a,
  a:visited {
    color: #1a1a1a;
    text-decoration: none;
  }

  wired-link {
    --wired-link-decoration-color: invisible;
  }

  .wired-link-no-underline {
    text-decoration: none;
  }
</style>
